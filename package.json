{
  "name": "grid-analytics",
  "version": "1.0.0",
  "description": "Advanced energy grid analytics platform for electrical cooperatives - Balance tracking, loss detection, and ETL automation",
  "main": "dist/server.js",
  "scripts": {
    "dev": "tsx watch src/server.ts",
    "build": "tsc",
    "start": "node dist/server.js",
    "test": "vitest",
    "test:coverage": "vitest --coverage",
    "test:e2e": "vitest run --config vitest.config.e2e.ts",
    "lint": "eslint src --ext .ts",
    "lint:fix": "eslint src --ext .ts --fix",
    "format": "prettier --write src",
    "db:generate": "prisma generate",
    "db:migrate": "prisma migrate dev",
    "db:migrate:deploy": "prisma migrate deploy",
    "db:seed": "tsx prisma/seed.ts",
    "db:studio": "prisma studio",
    "db:reset": "prisma migrate reset",
    "postinstall": "prisma generate"
  },
  "keywords": [
    "grid-analytics",
    "energy-management",
    "electrical-cooperative",
    "power-grid",
    "energy-balance",
    "loss-detection",
    "etl-automation",
    "typescript",
    "fastify",
    "prisma",
    "postgresql"
  ],
  "author": "Facu Francou",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/facufrancou/GridAnalytics.git"
  },
  "bugs": {
    "url": "https://github.com/facufrancou/GridAnalytics/issues"
  },
  "homepage": "https://github.com/facufrancou/GridAnalytics#readme",
  "dependencies": {
    "@fastify/cors": "^9.0.1",
    "@fastify/helmet": "^11.1.1",
    "@fastify/multipart": "^8.0.0",
    "@fastify/rate-limit": "^9.1.0",
    "@fastify/swagger": "^8.14.0",
    "@fastify/swagger-ui": "^2.1.0",
    "@prisma/client": "^6.18.0",
    "argon2": "^0.31.2",
    "csv-parse": "^5.5.2",
    "csv-stringify": "^6.4.4",
    "dayjs": "^1.11.10",
    "fastify": "^4.24.3",
    "jsonwebtoken": "^9.0.2",
    "nanoid": "^5.0.4",
    "pino": "^8.16.2",
    "pino-pretty": "^10.2.3",
    "zod": "^3.22.4"
  },
  "devDependencies": {
    "@types/jsonwebtoken": "^9.0.5",
    "@types/node": "^20.9.1",
    "@typescript-eslint/eslint-plugin": "^6.12.0",
    "@typescript-eslint/parser": "^6.12.0",
    "@vitest/coverage-v8": "^0.34.6",
    "eslint": "^8.54.0",
    "eslint-config-prettier": "^9.0.0",
    "eslint-plugin-prettier": "^5.0.1",
    "prettier": "^3.1.0",
    "prisma": "^6.18.0",
    "supertest": "^6.3.3",
    "tsx": "^4.6.0",
    "typescript": "^5.2.2",
    "vitest": "^0.34.6"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}
